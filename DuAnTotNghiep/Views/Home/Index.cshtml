<script>
    // Sự kiện khi bấm thêm vào giỏ
    function addCart(id) {
        $("#imgCart").attr("src", '/Images/cartB.png');
        $("#imgBusy_" + id).show();
        setTimeout(function () {
            $.ajax({
                url: "/Home/AddCart?Id=" + id,
                type: "POST",
                success: function (result) { },
                error: function (e) { }
            });
            $("#imgBusy_" + id).hide();
        }, 500);
    }
</script>
